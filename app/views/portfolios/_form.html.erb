<%= form_for(@portfolio) do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <br>
    <div class="field">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle %>
    </div>
    <br>
    <div>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <br>
    <%= f.submit %>
<% end %>